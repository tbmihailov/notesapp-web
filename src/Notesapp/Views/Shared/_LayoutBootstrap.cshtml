<!DOCTYPE html>
<html lang="en">
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script> 
    <!-- Le styles -->
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    @*<link rel="shortcut icon" href="~/Content/icons/favicon.ico">*@
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/icons/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/icons/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/icons/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/icons/apple-touch-icon-57-precomposed.png">
</head>
@{
    bool isHomeAndUserIsNotAuthenticated = (Request.RawUrl == Url.Action("Index", "Home") && !User.Identity.IsAuthenticated);
}
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.ActionLink("Notesapp", "Index", "Home", null, new { @class = "brand" })
                <div class="nav-collapse">
                    <ul class="nav pull-left">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Groups", "Index", "Groups")
                        </li>
                        <li>
                            @Html.ActionLink("Notes", "Index", "Notes")
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    { 
        @RenderSection("jumbotron", required: false)
    }

    @if ((Request.RawUrl == Url.Action("Index", "Home") && !User.Identity.IsAuthenticated))
    {
        <div class="container">
            @RenderBody()
        </div>
    }
    else
    { 
        <div class="container container-main">
            @RenderBody()
        </div>
    }

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DbGeographyTemplates")
    @Scripts.Render("~/bundles/DateTimeTemplates")
    @RenderSection("scripts", required: false)

</body>
</html>
